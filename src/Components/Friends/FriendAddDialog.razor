<AddFormDialog TModel=Friend Model=friend>
    <Fields Context=friend>
        <MudTextField Label="Name" @bind-Value=friend.Name For="@(() => friend.Name)" />
        <MudTextField Label="Surname" @bind-Value=friend.Surname For="@(() => friend.Surname)" />
    </Fields>
</AddFormDialog>

@code
{
    private Friend friend = new Friend { Name = string.Empty, Surname = string.Empty };
}