<MudCard Style="width:200px,height:300px">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">@Friend.Initiales</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Friend.Name @Friend.Surname</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText></MudText>
    </MudCardContent>
    <MudCardActions>
        <EditButton TEditDialog=FriendEditDialog TModel=Friend Model=Friend Title="Modification d'un invitÃ©" OnSuccess="Refresh" />
        <DeleteButton Model=Friend Refresh=Refresh />
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public Friend Friend { get; set; }

    [Parameter]
    public EventCallback Refresh { get; set; }
}