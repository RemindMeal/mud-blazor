<MudCard Width="500" Height="600">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@recipe.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>@recipe.Description</MudText>
        <MudText Typo="Typo.body2">@recipe.Category.Name</MudText>
    </MudCardContent>
    <MudCardActions>
        <EditButton TEditDialog=RecipeEditDialog TModel=Recipe Model=recipe Title="Modification d'une recette" OnSuccess=Refresh />
        <DeleteButton Model=recipe Refresh=Refresh />
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public Recipe recipe { get; set; }

    [Parameter]
    public EventCallback Refresh { get; set; }
}